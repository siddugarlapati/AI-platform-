# AIZA Enterprise AI Platform - Environment Configuration

# ============================================================================
# CORE SETTINGS
# ============================================================================
APP_NAME=AIZA Enterprise AI Platform
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-secret-key-change-this-in-production
HOST=0.0.0.0
PORT=8000

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://aiza:aiza_password@postgres:5432/aiza
REDIS_URL=redis://redis:6379/0

# ============================================================================
# AI SERVICES (REQUIRED)
# ============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ASSEMBLYAI_API_KEY=your-assemblyai-key-here
ELEVENLABS_API_KEY=your-elevenlabs-key-here
GROQ_API_KEY=gsk-your-groq-key-here

# ============================================================================
# VECTOR DATABASE
# ============================================================================
MILVUS_HOST=milvus
MILVUS_PORT=19530

# ============================================================================
# SEARCH ENGINE
# ============================================================================
ELASTICSEARCH_URL=http://elasticsearch:9200

# ============================================================================
# SECURITY
# ============================================================================
JWT_SECRET=your-jwt-secret-change-this
JWT_EXPIRATION=3600
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================================================
# FEATURES
# ============================================================================
ENABLE_VOICE=true
ENABLE_DOCUMENT_AI=true
ENABLE_AGENTS=true
ENABLE_ANALYTICS=true

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# MONITORING
# ============================================================================
SENTRY_DSN=https://your-sentry-dsn-here
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO

# ============================================================================
# FILE UPLOAD
# ============================================================================
MAX_UPLOAD_SIZE=104857600
UPLOAD_DIR=/app/data/uploads

# ============================================================================
# CELERY (Background Tasks)
# ============================================================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ============================================================================
# EMAIL (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@aiza.dev

# ============================================================================
# CLOUD STORAGE (Optional)
# ============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=aiza-storage
AWS_REGION=us-east-1

# ============================================================================
# ANALYTICS (Optional)
# ============================================================================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# ============================================================================
# PAYMENT (Optional)
# ============================================================================
STRIPE_API_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
